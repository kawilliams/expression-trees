# Recursive Factorial example in PhySL
# \param iterations Number of iterations
# \returns the Factorial value after specified `iterations`

define(fact, arg0,
    if (arg0 <= 1,
        1,
        arg0 * fact(arg0 - 1)
    )
)

apply(fact, sys_argv)

